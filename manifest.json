{
  "name": "Superbib",
  "version": "0.1",
  "manifest_version": 2,
  
  "description": "Analyzes bibliographic sources",
  
  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
	"storage",
	"http://www.google.com/*",
	"storage"
    ],
    
  "browser_action": {
    "default_icon": "supericon.png",
    "default_popup": "popup.html"
   
  },
  "icons" : {
  "16" : "supericon.png",
  "48" : "supericon.png",
  "128" : "supericon.png"
  
  },
  "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["jquery-2.1.1.js", "content.js"],
		"run_at": "document_start",
		"all_frames": true
    }]


}

